{% block driven_set_configurator_disabled %}
    {% set Equipments = lineItem.extensions["Equipments"] %}
    <div class="container">
    {% if lineItem.type === "dvsn-set-configurator" || lineItem.payload.customFields["driven_product_configurator_racquet_option"] === "racquet" %}
    <div class="row">
        <div class="offset-1 mb-3 mt-3 col-md-10">
            <div class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Vorhand:</h5>
                    <small class="text-muted">für {{ Equipments.racquetQuantity }} Hölzer</small>
                </div>
                {% for i in 0..Equipments.front.length %}
                    {% set color = Equipments.front.foreheadEquipments[i].payload["options"][0].option %}
                    {% set size =  Equipments.front.foreheadEquipments[i].payload["options"][1].option %}
                    {% if  Equipments.front.foreheadEquipments[i].id != null %}
                        {% if Equipments.selection.foreheadSelection == Equipments.front.foreheadEquipments[i].id %}
                            {% set foreheadLabel =  Equipments.back.backheadEquipments[i].label %}
                            {% set foreheadColor = Equipments.front.foreheadEquipments[i].payload["options"][0].option %}
                            {% set foreheadSize =  Equipments.front.foreheadEquipments[i].payload["options"][1].option %}
                            <p class="mb-1 offset-2 font-weight-bold">{{ foreheadLabel }} {{ foreheadColor }} {{ foreheadSize }}</p>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
            <div class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Rückhand:</h5>
                    <small class="text-muted">für {{ Equipments.racquetQuantity }} Hölzer</small>
                </div>
                {% for i in 0..Equipments.back.length %}
                    {% set color = Equipments.back.backheadEquipments[i].payload["options"][0].option %}
                    {% set size =  Equipments.back.backheadEquipments[i].payload["options"][1].option %}
                    {% if  Equipments.back.backheadEquipments[i].id != null %}
                        {% if Equipments.selection.backheadSelection == Equipments.back.backheadEquipments[i].id %}
                            {% set foreheadLabel =  Equipments.back.backheadEquipments[i].label %}
                            {% set foreheadColor = Equipments.back.backheadEquipments[i].payload["options"][0].option %}
                            {% set foreheadSize =  Equipments.back.backheadEquipments[i].payload["options"][1].option %}
                            <p class="mb-1 offset-2 font-weight-bold">{{ foreheadLabel }} {{ foreheadColor }} {{ foreheadSize }}</p>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
            <div class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Versiegelung:</h5>
                </div>
                {% if Equipments.selection.sealingSelection < 1 %}
                    <p class="mb-1 offset-2 font-weight-bold">Keine Versiegelung</p>
                {% elseif Equipments.selection.sealingSelection == 1 %}
                    <p class="mb-1 offset-2 font-weight-bold">inkl. Versiegelung (zzgl. 5 EUR)</p>
                {% elseif Equipments.selection.sealingSelection > 1 %}
                    <p class="mb-1 offset-2 font-weight-bold">{{ Equipments.selection.sealing }} Schläger versiegeln
                        (zzgl. {{ Equipments.selection.sealing * 5 }} EUR)</p>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}