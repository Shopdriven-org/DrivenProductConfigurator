<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Driven\ProductConfigurator\Subscriber\Storefront\Page\Product\ProductPageSubscriber">
            <argument type="service" id="session" />
            <argument type="service" id="product.repository"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Driven\ProductConfigurator\Subscriber\Core\Checkout\Cart\Order\OrderConverterSubscriber">
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Driven\ProductConfigurator\Subscriber\Core\Checkout\Cart\CartChangedSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Driven\ProductConfigurator\Subscriber\Core\Checkout\Cart\AfterLineItemAddedSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Driven\ProductConfigurator\Subscriber\Core\Checkout\Cart\CartSavedSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>